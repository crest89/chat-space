.message
  .message__up
    %p.message__up-name
      = message.user.name
    %p.message__up-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__text
    - if message.content.present?
      %p.message__text-true
        = message.content
      = image_tag message.image.url, class: 'message__text__image' if message.image.present?